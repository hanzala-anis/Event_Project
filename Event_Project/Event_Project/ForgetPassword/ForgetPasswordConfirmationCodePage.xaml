<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Event_Project.ForgetPassword.ForgetPasswordConfirmationCodePage">
    <ContentPage.Content>
        <StackLayout>
        <StackLayout HorizontalOptions="Center">
            <Image Source="@drawable/Icon"></Image>
            <Label Text="powered by GPS" HorizontalOptions="Center"></Label>
            <Label Text=" "></Label>
            <Label Text="Your confirmation code has been sent to your email address"></Label>
            <Entry Placeholder="enter code here"></Entry>

            <Button x:Name="btnGetCode_ForgetPasswordEmailPage" Text="OK" Clicked="btnGetCode_ForgetPasswordEmailPage_Clicked" ></Button>
        </StackLayout>

        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" >

            <StackLayout HorizontalOptions="Start">
                <Label Text=" " ></Label>
                <Label Text="Keep me logged in ?" ></Label>

            </StackLayout>
            <StackLayout HorizontalOptions="EndAndExpand">
                <Label Text="No   Yes"></Label>
                <Switch BackgroundColor="AliceBlue" ></Switch>
            </StackLayout>

        </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>